{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "gql2ts": "^1.10.1",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.0",
    "ts-node": "8.0.2",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-import": "^0.7.1",
    "graphql-request": "^1.8.2",
    "graphql-yoga": "^1.17.4",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.14"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "test-server": "cross-env NODE_ENV=test nodemon --exec ts-node --files src/index.ts",
    "gen:schema": "yarn gql2ts src/schema.graphql -o src/types/schema.d.ts",
    "test": "concurrently \"yarn test-server\" \"yarn jest --detectOpenHandles --watch\""
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
